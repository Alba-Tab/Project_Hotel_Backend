# ===============================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO
# ===============================================
# Copia este archivo como .env y ajusta los valores

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================
DATABASE_NAME=hotel_db
DATABASE_USER=postgres
DATABASE_PASSWORD=tu_password_aqui
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432

# ===========================================
# CONFIGURACIÓN DE DJANGO
# ===========================================
# IMPORTANTE: Genera tu propia SECRET_KEY para producción
SECRET_KEY=django-insecure-GENERA_TU_PROPIA_SECRET_KEY_AQUI
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# CONFIGURACIÓN MULTI-TENANT
# ===========================================
PUBLIC_SCHEMA_NAME=public
TENANT_APPS_DIR=apps

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================
DJANGO_SETTINGS_MODULE=cadena_hoteleria.settings

# ===========================================
# ARCHIVOS ESTÁTICOS Y MEDIA
# ===========================================
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles/
MEDIA_ROOT=media/

# ===========================================
# CONFIGURACIÓN REGIONAL
# ===========================================
TIME_ZONE=America/La_Paz
USE_TZ=True
LANGUAGE_CODE=es-es

# ===========================================
# DJANGO REST FRAMEWORK
# ===========================================
DRF_PAGE_SIZE=20

